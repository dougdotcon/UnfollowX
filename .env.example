# ============================================
# SISTEMA SELENIUM-ONLY - NÃO REQUER API DO TWITTER
# ============================================

# OpenRouter API Key (OBRIGATÓRIO)
# Obtenha sua chave em: https://openrouter.ai/
# Usado para análise de IA dos perfis
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ============================================
# CONFIGURAÇÕES OPCIONAIS
# ============================================

# Número de unfollows por execução (padrão: 20)
UNFOLLOWS_PER_BATCH=20

# Intervalo entre execuções em minutos (padrão: 20)
EXECUTION_INTERVAL_MINUTES=20

# Intervalo entre unfollows em segundos (padrão: 3)
UNFOLLOW_DELAY=3

# Navegador a usar: chrome ou brave (padrão: chrome)
BROWSER=chrome

# Modo headless: true ou false (padrão: false)
HEADLESS=false

# Máximo de following para coletar (padrão: 5000)
MAX_FOLLOWING=5000

# Máximo de followers para coletar (padrão: 5000)
MAX_FOLLOWERS=5000
